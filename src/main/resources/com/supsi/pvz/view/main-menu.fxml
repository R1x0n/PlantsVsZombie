<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.supsi.pvz.MainMenuController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="%title.text">
      <font>
         <Font size="20.0" />
      </font></Label>
    <Button fx:id="start" mnemonicParsing="false" onMouseClicked="#startGame" text="%start_button.text" />
    <Button fx:id="exit" mnemonicParsing="false" onMouseClicked="#exitGame" text="%exit_button.text" />
</VBox>
